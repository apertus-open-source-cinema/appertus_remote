<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:weightSum="1">
	<EditText android:layout_width="match_parent"
		android:layout_height="wrap_content" android:text="@string/IP"
		android:id="@+id/IPfield">
	</EditText>
	<Button android:layout_height="wrap_content" android:id="@+id/button1"
		android:layout_width="match_parent" android:text="@string/Connect"></Button>
	<Appertus.Test.ApertusSlider android:id="@+id/slider1"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
		</LinearLayout>
	</Appertus.Test.ApertusSlider>
</LinearLayout>
