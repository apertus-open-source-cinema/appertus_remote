<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:weightSum="1">
	<TextView android:id="@+id/result1" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:text=""
		android:layout_weight="0.69"></TextView>
	<apertus.remote.ApertusSlider android:id="@+id/slider1"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<ImageView android:id="@+id/test_image" android:src="@drawable/test"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
		</LinearLayout>
	</apertus.remote.ApertusSlider>
	<TextView android:id="@+id/slidepos" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:layout_weight="0.69"
		android:text=""></TextView>
</LinearLayout>
